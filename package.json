{
  "name": "vue-bare-composables",
  "version": "3.1.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "!/**/__test__",
    "!*.test.*"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "vue-tsc --noEmit && vite build",
    "lint": "eslint .",
    "test": "vitest run",
    "smoke": "yarn build && yarn lint && yarn test",
    "-- PRE-COMMIT HOOKS --": "",
    "localAfterInstall": "husky || true",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "packageManager": "yarn@4.8.1",
  "peerDependencies": {
    "pinia": "3.x",
    "vue": "3.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.15.21",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "pinia": "3.x",
    "pinst": "^3.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4",
    "vue": "3.x",
    "vue-tsc": "^2.2.10"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericvera/vue-bare-composables"
  },
  "keywords": [
    "vue",
    "composables",
    "forms",
    "state machine"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,mjs}": "eslint --cache",
    "*": "prettier --ignore-unknown --write"
  }
}
